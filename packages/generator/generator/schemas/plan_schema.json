{
  "$id": "PlanV2",
  "type": "object",
  "required": ["title", "target_length_sec", "clips"],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "target_length_sec": { "type": "number", "minimum": 30, "maximum": 600 },
    "clips": {
      "type": "array",
      "minItems": 6,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["index", "start_sec", "end_sec", "mode", "image_prompt", "subtitle"],
        "properties": {
          "index": { "type": "integer", "minimum": 1 },
          "start_sec": { "type": "number", "minimum": 0 },
          "end_sec": { "type": "number", "minimum": 0 },
          "mode": { "type": "string", "enum": ["dialogue", "verse", "both"] },
          "dialogue_text": { "type": ["string", "null"] },
          "verse": {
            "type": ["object", "null"],
            "required": ["ref", "text"],
            "properties": {
              "ref": { "type": "string", "minLength": 3 },
              "text": { "type": "string", "minLength": 10 }
            },
            "additionalProperties": false
          },
          "image_prompt": { "type": "string", "minLength": 10 },
          "subtitle": { "type": "string", "minLength": 3, "maxLength": 100 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
